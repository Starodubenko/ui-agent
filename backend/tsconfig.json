{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@config/*": ["src/config/*"],
      "@main/*": ["src/main/*"],
      "@prisma/*": ["src/modules/prisma/*"],
      "@user/*": ["src/modules/user/*"],
      "@auth/*": ["src/modules/auth/*"],
      "@component/*": ["src/modules/component/*"],
      "@version/*": ["src/modules/version/*"],
      "@figma/*": ["src/modules/figma/*"],
      "@openai/*": ["src/modules/openai/*"],
      "@test/*": ["src/modules/test/*"],
      "@prompt/*": ["src/modules/prompt/*"],
    }
  }
}
